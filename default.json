{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		":automergeBranch",
		":automergeMinor",
		":combinePatchMinorReleases",
		":dependencyDashboard",
		":enableVulnerabilityAlertsWithLabel(security)",
		":ignoreModulesAndTests",
		":label(dependencies)",
		":rebaseStalePrs",
		":semanticCommitsDisabled",
		":separateMajorReleases",
		"group:recommended"
	],
	"assignees": [
		"eliashaeussler"
	],
	"commitBodyTable": true,
	"commitMessageLowerCase": "never",
	"commitMessagePrefix": "[TASK]",
	"commitMessageTopic": "{{depName}}",
	"composerIgnorePlatformReqs": null,
	"configMigration": true,
	"customManagers": [
		{
			"customType": "regex",
			"fileMatch": [
				"^\\.github/workflows/.+\\.yaml$"
			],
			"matchStrings": [
				"php-version: '?(?<currentValue>\\d\\.\\d\\S*)'?"
			],
			"datasourceTemplate": "github-tags",
			"depNameTemplate": "php",
			"packageNameTemplate": "containerbase/php-prebuild"
		}
	],
	"lockFileMaintenance": {
		"enabled": true,
		"extends": [
			"schedule:daily"
		],
		"commitMessageAction": "Update all dependencies"
	},
	"osvVulnerabilityAlerts": true,
	"packageRules": [
		{
			"description": "Handle PHP requirement specifically",
			"extends": [
				":automergeDisabled"
			],
			"ignoreUnstable": false,
			"matchPackageNames": [
				"php"
			],
			"rangeStrategy": "widen"
		},
		{
			"description": "Automerge PHP version updates in GitHub workflows",
			"extends": [
				":automergeMinor"
			],
			"matchManagers": [
				"regex"
			],
			"matchFileNames": [
				".github/workflows/**"
			],
			"matchPackageNames": [
				"php",
				"containerbase/php-prebuild"
			]
		},
		{
			"description": "Disable automerge for PHP version updates in GitHub release workflow",
			"extends": [
				":automergeDisabled"
			],
			"matchManagers": [
				"regex"
			],
			"matchFileNames": [
				".github/workflows/release.yaml"
			],
			"matchPackageNames": [
				"php",
				"containerbase/php-prebuild"
			]
		}
	],
	"platformAutomerge": true,
	"vulnerabilityAlerts": {
		"extends": [
			":automergeDisabled",
			":automergePr"
		],
		"rangeStrategy": "replace"
	}
}
