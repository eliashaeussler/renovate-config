{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		":automergeBranch",
		":automergeMinor",
		":combinePatchMinorReleases",
		":dependencyDashboard",
		":enableVulnerabilityAlertsWithLabel(security)",
		":ignoreModulesAndTests",
		":label(dependencies)",
		":rebaseStalePrs",
		":semanticCommitsDisabled",
		":separateMajorReleases",
		"group:recommended"
	],
	"assignees": [
		"eliashaeussler"
	],
	"commitBodyTable": true,
	"commitMessageLowerCase": "never",
	"commitMessagePrefix": "[TASK]",
	"commitMessageTopic": "{{depName}}",
	"composerIgnorePlatformReqs": null,
	"configMigration": true,
	"customManagers": [
		{
			"customType": "regex",
			"fileMatch": [
				"^\\.github/workflows/.+\\.yaml$"
			],
			"matchStrings": [
				"php-version: '?(?<currentValue>\\d\\.\\d\\S*)'?"
			],
			"datasourceTemplate": "docker",
			"depNameTemplate": "php",
			"versioningTemplate": "docker"
		}
	],
	"lockFileMaintenance": {
		"enabled": true,
		"extends": [
			"schedule:daily"
		],
		"commitMessageAction": "Update all dependencies"
	},
	"packageRules": [
		{
			"description": "Handle PHP requirement specifically",
			"extends": [
				":automergeDisabled"
			],
			"ignoreUnstable": false,
			"matchManagers": [
				"composer"
			],
			"matchPackageNames": [
				"php"
			],
			"rangeStrategy": "widen"
		},
		{
			"description": "Override commit message for PHP version updates in GitHub workflows",
			"commitMessageTopic": "{{{depName}}}",
			"matchFileNames": [
				".github/workflows/**"
			],
			"matchManagers": [
				"regex"
			],
			"matchDepNames": [
				"php"
			]
		},
		{
			"description": "Group GitHub artifact actions",
			"matchDepNames": [
				"actions/download-artifact",
				"actions/upload-artifact"
			],
			"groupName": "GitHub artifact actions"
		},
		{
			"description": "Group stylelint packages",
			"matchPackagePrefixes": [
				"stylelint"
			]
		},
		{
			"description": "Group ESLint packages",
			"matchPackagePrefixes": [
				"@typescript-eslint"
			]
		}
	],
	"platformAutomerge": true,
	"vulnerabilityAlerts": {
		"extends": [
			":automergeDisabled",
			":automergePr"
		],
		"rangeStrategy": "replace"
	}
}
