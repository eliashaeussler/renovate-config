{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/^\\.github/workflows/.+\\.yaml$/"
			],
			"matchStrings": [
				"uses: ddev/github-action-setup-ddev@[^\\n]+\\n\\s+with:\\n\\s+version: '(?<currentValue>[^']+)'"
			],
			"datasourceTemplate": "github-releases",
			"depNameTemplate": "ddev/ddev"
		},
		{
			"customType": "regex",
			"managerFilePatterns": [
				"/^\\.ddev/addon-metadata/[^/]+/manifest\\.yaml$/"
			],
			"matchStrings": [
				"repository: (?<depName>[^\\n]+)\\nversion: (?<currentValue>[^\\n]+)"
			],
			"datasourceTemplate": "github-tags"
		}
	],
	"packageRules": [
		{
			"extends": [
				":automergeDisabled"
			],
			"matchManagers": [
				"custom.regex"
			],
			"matchFileNames": [
				".ddev/addon-metadata/**"
			],
			"separateMajorMinor": false
		}
	]
}
